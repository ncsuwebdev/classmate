				    <?php echo $this->translate("workshop-signup-index:onlyWaitlist"); ?>
				</div>
				<br />
	            <?php echo $this->translate("workshop-signup-index:seatsTaken", array($this->event['maxSize'], $this->event['waitlistSize'] - $this->event['waitlistTotal'])); ?>
