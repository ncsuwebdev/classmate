	            <?php echo $this->translate("workshop-signup-index:confirm"); ?><br />
	        <?php else: ?>  
	            <div id="fullClass" class="banner">
	            <?php echo $this->translate("workshop-signup-index:full"); ?>
	            </div>
	            <?php echo $this->translate("workshop-signup-index:tryAgain"); ?>
	        <?php endif; ?>                  
	    <?php endif; ?>
	<?php endif; ?>
