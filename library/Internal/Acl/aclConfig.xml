<?xml version="1.0"?>
<roles>
  <role>
    <name>guest</name>
    <inherit></inherit>
    <editable>1</editable>
    <allows>
      <allow>
        <resource>login_index</resource>
        <privilege>*</privilege>
      </allow>
      <allow>
        <resource>default_index</resource>
        <privilege>*</privilege>
      </allow>      
    </allows>
    <denys/>
  </role>
  <role>
    <name>authUser</name>
    <inherit>guest</inherit>
    <editable>1</editable>
    <allows>
      <allow>
        <resource>admin_api</resource>
        <privilege>*</privilege>
      </allow>
    </allows>
    <denys/>
  </role>
  <role>
    <name>administrator</name>
    <inherit></inherit>
    <editable></editable>
    <allows>
      <allow>
        <resource>*</resource>
        <privilege>*</privilege>
      </allow>
    </allows>
    <denys/>
  </role>
  <role>
    <name>oit_ot_staff</name>
    <inherit></inherit>
    <editable></editable>
    <allows>
      <allow>
        <resource>*</resource>
        <privilege>*</privilege>
      </allow>
    </allows>
    <denys/>
  </role>
  <role>
    <name>test_role</name>
    <inherit>authUser</inherit>
    <editable>1</editable>
    <allows>
      <allow>
        <resource>admin_acl</resource>
        <privilege>add</privilege>
      </allow>
      <allow>
        <resource>admin_acl</resource>
        <privilege>delete</privilege>
      </allow>
      <allow>
        <resource>admin_cron</resource>
        <privilege>*</privilege>
      </allow>
    </allows>
    <denys>
      <deny>
        <resource>admin_api</resource>
        <privilege>*</privilege>
      </deny>
    </denys>
  </role>
</roles>
